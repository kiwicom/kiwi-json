[all]
files = kw/**.py, test/**.py, *.(yml|yaml), *.md, *requirements.txt, .coafile, Dockerfile

indent_size = 4
use_spaces = yes
max_line_length = 120
max_lines_per_file = 1000
file_naming_convention = snake

[all.filename]
bears = FilenameBear
ignore += Dockerfile

[all.long-files]
bears = LineCountBear

[all.python]
language = python
files = kw/**.py, test/**.py

[all.python.keywords]
language = python
files = kw/json/**.py
bears = KeywordBear
keywords =
  import kw.json,
  from kw.json,
  FIXME,
  pdb.set_trace(),
  sys.path.insert,
  sys.path.append,

[all.python.keywords-in-test]
files = test/**.py
bears = KeywordBear
keywords =
  arrow.now,
  arrow.utcnow,
  datetime.now,
  datetime.utcnow

[all.python.imports]
bears = PyImportSortBear
force_single_line_imports = False
known_first_party_imports = kw.json, test
isort_multi_line_output = 3  # 3 means 'Vertical Hanging Indent'
default_import_section = THIRDPARTY
include_trailing_comma_in_import = True

[all.python.spacing]
bears = SpaceConsistencyBear

[all.python.object-inheritance]
bears = KeywordBear
language = python
files = kw/json/**.py
regex_keyword = class.*\(object\)\:

[all.python.quotes]
enabled = nope  # https://github.com/coala/coala-bears/issues/1103
bears = QuotesBear
preferred_quotation = '

[all.relative-imports]
bears = KeywordBear
language = python
files = kw/json/**.py
regex_keyword = (?<!>>> )(?:from kw\.json|import kw\.json)

[all.python.docs]
bears = PyDocStyleBear
pydocstyle_ignore =
  D100, D101, D102, D103, D104, D105,  # Missing docstrings
  D202,  # No blank lines allowed after function docstring
  D203,  # 1 blank line required before class docstring
  D213,  # Multi-line docstring summary should start at the second line

[all.python.linelength]
bears = LineLengthBear

[all.python.unused-code]
bears = PyUnusedCodeBear
ignore += **/__init__.py

[all.python.complexity]
bears = RadonBear

[all.python.commented-code]
bears = PyCommentedCodeBear

[all.requirements]
files = *requirements.txt

[all.requirements.safety]
bears = PySafetyBear

[all.requirements.pinning]
bears = PinRequirementsBear

[all.yaml]
files = *.(yml|yaml)

[all.yaml.spacing]
bears = SpaceConsistencyBear
indent_size = 2

[all.yaml.lint]
bears = YAMLLintBear

[dockerfile]
files = Dockerfile
bears = DockerfileLintBear

[markdown]
files = *.md
bears = MarkdownBear

[commit]
bears = GitCommitBear
shortlog_length = 72
shortlog_trailing_period = no
ignore_length_regex = https?://
